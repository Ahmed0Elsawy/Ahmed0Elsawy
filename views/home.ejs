    </div>
  </section>

  <!-- Process Section -->
  <section id="process" class="reveal">
    <h1>Our Development Process</h1>
    <div class="process-grid">
      <div class="step">
        <h2>Data Collection</h2>
        <p>Curated mental health datasets from verified sources</p>
      </div>
      <div class="step">
